<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:background="#fff"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/tv_row_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/container_for_blog_card_details"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_row_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:shadowColor="#000"
                    android:text="Title"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_row_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:shadowColor="#000"
                    android:text="Description"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/container_for_blog_card_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_row_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:paddingLeft="3dp"
                    android:text="username"
                    android:textColor="#000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_row_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:gravity="end|center_vertical"
                    android:maxLines="1"
                    android:paddingRight="3dp"
                    android:shadowColor="#000"
                    android:text="2 min ago"
                    android:textColor="#000"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/tv_row_icon"
            android:layout_width="80dp"
            android:visibility="gone"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:shadowColor="#000" />


    </RelativeLayout>
